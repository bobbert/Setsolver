<h1>New player</h1>

<%= error_messages_for :player %>

<% form_for(@player) do |f| %>
  <p>
    <b>First Name:</b>
    <%= f.text_field :fname %>
  </p>
  <p>
    <b>Last Name:</b>
    <%= f.text_field :lname %>
  </p>

  <p>
    <b>Rating:</b> Starts at 1000. <br />
  </p>

  <p>
    <%= f.submit "Create" %>
  </p>
<% end %>

<%= link_to 'Back', players_path %>
