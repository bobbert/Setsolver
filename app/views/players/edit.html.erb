<h1>Editing player</h1>

<%= error_messages_for :player %>

<% form_for([@game,@player]) do |f| %>
  <p>
    <b>Name:</b>
    <%=h @player.name %>
  </p>

  <p>
    <b>Score</b><br />
    <%= f.text_field :score %>
  </p>

  <p>
    <%= f.submit "Edit" %>
  </p>

<% end %>

<%= link_to 'Show', game_player_path %> |
<%= link_to 'Back', game_players_path %>
