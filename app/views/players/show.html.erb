<p><b><%= @player.name %></b> (Rating= <%= @player.rating %>)</p>
<p><%= link_to "Create new game for #{@player.fname}", new_player_game_path(@player) %></p>
<ul>
<% for game in @player.games %>
  <li style="padding-bottom: 10px;"><%= game_number_as_link(@player,game) %> (<%= game.player_names %>): <%= game_play_link(@player,game) %> <br />
      <%= link_to "Show game", player_game_path(@player,game) %> |
      <%= link_to "Edit game", edit_player_game_path(@player,game) %>
  </li>
<% end %>
</ul>


