<p align=right>
<%= link_to '[Create New Game]', :action => 'create' %>
<%= link_to '[ << Previous Page ]', { :page => @game_pages.current.previous } if @game_pages.current.previous %>
<%= link_to '[ Next page >> ]', { :page => @game_pages.current.next } if @game_pages.current.next %> 
</p>
<div class="setsolver" align=center width=90%>
<table class="setsolver" border=0 width=450>
<% for game in @games %>
  <% play_action_word = (@game.deck.nil?) ? 'Start' : 'Continue' %>
  <tr>
  <td> Game #<%= game.id %>: </td>
  <td><%= link_to "[#{play_action_word} Playing]", :action => 'play', :id => game.id %></td>
  <td><%= link_to '[Delete]', { :action => 'destroy', :id => game.id },
                  :confirm => 'Are you sure?', :method => :post %></td>
  </tr>
<% end %>
</table>
</div>

