<%= error_messages_for 'game' %>
<!--[form:game]-->

<p>
  <h3>The deck has <span id="remaining"><%= number_noun_desc( @game.deck.facedown.length, 'card' ) %></span> cards remaining. </h3>
  <h3><span id="num_sets"><%= number_noun_desc( @sets.length, 'set' ) %></span> can be found among the cards below: </h3>
</p>
<div id="setboard" style="width:<%= (@game.field.length / 3) * 101 %>px">
  <% Game::FIELD_ROWS.sort {|a,b| a[1] <=> b[1] }.each_with_index do |kv_arr, row_i| %>
    <ul id="row<%= kv_arr[1] %>" class="setboard-row">
    <% @game.field_row(kv_arr[0]).each_with_index do |c,col_i| %>
      <% indx = (Game::FIELD_ROWS.length * col_i) + row_i %>
      <li id="c_card<%= indx.to_s %>" class="setboard-cell"><%= check_box_tag(('card' + indx.to_s), 'SELECTED', false) %><%= card_image c %></li>
    <% end %>
    </ul>
  <% end %>
</div>
<br />

